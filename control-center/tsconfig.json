{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "Node"
    },
    "moduleTypes": {
      "src/**/*.ts": "cjs"
    }
  },
  "include": ["src/**/*.ts"]
}
